<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/side_content_statistique"
    android:background="@color/colorWhiteOpaque"
    tools:context=".ui.digitalisation.DigitalisationDetailsActivity">

    <ProgressBar
        android:id="@+id/loading"
        android:visibility="visible"
        android:elevation="50dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:id="@+id/content_blur"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/colorGreenBarDark"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_bold"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:text="@string/statistique"
                        android:textColor="@color/colorBlack2"
                        android:textSize="30sp"
                        >
                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:id="@+id/card_trame"
            android:layout_height="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/colorWhiteOpaque"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/colorWhiteOpaque"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <EditText
                            android:id="@+id/searchView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/style_search"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="@string/research_candidat"
                            android:textColorHint="@color/colorBlack2"
                            android:paddingBottom="5dp"
                            android:paddingStart="14dp"
                            android:paddingVertical="12dp"
                            android:imeOptions="actionSearch"
                            android:textColor="@color/colorBlack2"
                            android:singleLine="true" />

                        <ImageButton
                            android:id="@+id/search_button"
                            android:layout_width="43dp"
                            android:layout_height="43dp"
                            android:layout_marginBottom="-7dp"
                            android:layout_alignEnd="@id/searchView"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_search"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="0dp"
                            android:text="Button"/>


                    </RelativeLayout>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/content"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="false">


                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@android:color/transparent"
            app:cardPreventCornerOverlap="false"
            android:layout_width="match_parent"
            app:cardElevation="0dp"
            android:layout_weight="0.45"
            android:layout_height="0dp">
            <include
                layout="@layout/bottom_navigation" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>
