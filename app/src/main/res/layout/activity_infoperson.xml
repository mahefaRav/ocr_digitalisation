<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/side_content_statistique"
    android:background="@color/colorWhiteOpaque"
    tools:context=".ui.infoUser.Infoperson">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:id="@+id/content_blur"
            android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/colorGreenBarDark"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_bold"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Info User"
                android:textColor="@color/colorBlack2"
                android:textSize="30sp">
            </TextView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@android:color/transparent"
        app:cardPreventCornerOverlap="false"
            android:layout_width="match_parent"
            app:cardElevation="0dp"
            android:layout_weight="0.45"
            android:layout_height="0dp">


            <include layout="@layout/bottom_navigation" />

        <TextView
            android:id="@+id/textView"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="District:" />

        <TextView
            android:id="@+id/districtLabel"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="110dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="District:" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Nom:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Prenom:"
            android:textSize="20dp" />

    </androidx.cardview.widget.CardView>

    </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
